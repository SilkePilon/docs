{
  "asyncapi": "3.0.0",
  "info": {
    "title": "Jotihunt Live WebSocket API",
    "version": "1.0.0",
    "description": "Real-time updates API for Jotihunt events"
  },  "servers": {
    "production": {
      "host": "api.jotihunt.live",
      "pathname": "/ws",
      "protocol": "wss",
      "description": "Production WebSocket server"
    }
  },
  "channels": {
    "updates": {
      "address": "updates",
      "description": "Channel for receiving real-time Jotihunt updates",
      "messages": {
        "updateMessage": {
          "name": "Update Message",
          "description": "Real-time update from the Jotihunt game",
          "payload": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "The type of update",
                "enum": ["article", "hunt", "score", "area"]
              },
              "data": {
                "type": "object",
                "description": "The update data payload"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "When the update occurred"
              }
            },
            "required": ["type", "data", "timestamp"]
          }
        }
      }
    }
  },
  "operations": {
    "receiveUpdates": {
      "action": "receive",
      "channel": {
        "$ref": "#/channels/updates"
      },
      "description": "Receive real-time updates from the Jotihunt game"
    }
  }
}